generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_CONNECTION_URI")
}

model Instance {
  id                      String                   @id @default(cuid())
  name                    String                   @unique
  connectionStatus        String                   @default("open")
  ownerJid                String?
  profileName             String?
  profilePicUrl           String?
  integration             String?
  number                  String?
  businessId              String?
  token                   String?
  clientName              String?
  disconnectionReasonCode Int?
  disconnectionObject     String?
  disconnectionAt         DateTime?
  createdAt               DateTime?                @default(now())
  updatedAt               DateTime?                @updatedAt
  Chat                    Chat[]
  Contact                 Contact[]
  Message                 Message[]
  Webhook                 Webhook?
  Label                   Label[]
  Setting                 Setting?
  Session                 Session?
  Websocket               Websocket?
  N8n                     N8nSetting?
}

model Session {
  id        String   @id @default(cuid())
  sessionId String   @unique
  creds     String?
  createdAt DateTime @default(now())
  Instance  Instance @relation(fields: [sessionId], references: [id], onDelete: Cascade)
}

model Chat {
  id             String    @id @default(cuid())
  remoteJid      String
  name           String?
  labels         String?
  createdAt      DateTime? @default(now())
  updatedAt      DateTime? @updatedAt
  Instance       Instance  @relation(fields: [instanceId], references: [id], onDelete: Cascade)
  instanceId     String
  unreadMessages Int       @default(0)

  @@unique([instanceId, remoteJid])
}

model Contact {
  id            String    @id @default(cuid())
  remoteJid     String
  pushName      String?
  profilePicUrl String?
  createdAt     DateTime? @default(now())
  updatedAt     DateTime? @updatedAt
  Instance      Instance  @relation(fields: [instanceId], references: [id], onDelete: Cascade)
  instanceId    String

  @@unique([remoteJid, instanceId])
}

model Message {
  id                           String          @id @default(cuid())
  key                          String
  pushName                     String?
  participant                  String?
  messageType                  String
  message                      String
  contextInfo                  String?
  source                       String
  messageTimestamp             Int
  Instance                     Instance        @relation(fields: [instanceId], references: [id], onDelete: Cascade)
  instanceId                   String
  status                       String?
}

model Webhook {
  id              String    @id @default(cuid())
  url             String
  headers         String?
  enabled         Boolean?  @default(true)
  events          String?
  webhookByEvents Boolean?  @default(false)
  webhookBase64   Boolean?  @default(false)
  createdAt       DateTime? @default(now())
  updatedAt       DateTime  @updatedAt
  Instance        Instance  @relation(fields: [instanceId], references: [id], onDelete: Cascade)
  instanceId      String    @unique
}

model Setting {
  id              String    @id @default(cuid())
  rejectCall      Boolean   @default(false)
  msgCall         String?
  groupsIgnore    Boolean   @default(false)
  alwaysOnline    Boolean   @default(false)
  readMessages    Boolean   @default(false)
  readStatus      Boolean   @default(false)
  syncFullHistory Boolean   @default(false)
  wavoipToken     String?
  createdAt       DateTime? @default(now())
  updatedAt       DateTime  @updatedAt
  Instance        Instance  @relation(fields: [instanceId], references: [id], onDelete: Cascade)
  instanceId      String    @unique
}

model Label {
  id           String    @id @default(cuid())
  labelId      String?
  name         String
  color        String
  predefinedId String?
  createdAt    DateTime? @default(now())
  updatedAt    DateTime  @updatedAt
  Instance     Instance  @relation(fields: [instanceId], references: [id], onDelete: Cascade)
  instanceId   String

  @@unique([labelId, instanceId])
}

model Websocket {
  id         String    @id @default(cuid())
  enabled    Boolean   @default(false)
  events     String?
  createdAt  DateTime? @default(now())
  updatedAt  DateTime  @updatedAt
  Instance   Instance  @relation(fields: [instanceId], references: [id], onDelete: Cascade)
  instanceId String    @unique
}

model N8nSetting {
  id              String    @id @default(cuid())
  enabled         Boolean   @default(true)
  url             String?
  events          String?
  createdAt       DateTime? @default(now())
  updatedAt       DateTime  @updatedAt
  Instance        Instance  @relation(fields: [instanceId], references: [id], onDelete: Cascade)
  instanceId      String    @unique
}
